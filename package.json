{
  "name": "ai-blog-cms",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=ai-blog-cms-db --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy dist --project-name ai-blog-cms",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:create": "wrangler d1 create ai-blog-cms-db",
    "db:migrate:local": "wrangler d1 migrations apply ai-blog-cms-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply ai-blog-cms-db",
    "db:console:local": "wrangler d1 execute ai-blog-cms-db --local",
    "db:console:prod": "wrangler d1 execute ai-blog-cms-db",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "hono": "^4.10.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
